{
  "name": "life-engine",
  "version": "0.0.1",
  "license": "GPL 3.0",
  "description": "A particle simulator",
  "author": "lukenarnold@gmail.com",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron .",
    "dist": "build"
  },
  "build": {
    "appId": "com.lukalot.lifeengine",
