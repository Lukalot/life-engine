    }
  },
  "dependencies": {
    "electron": "^6.1.12",
    "electron-reload": "^1.5.0",
    "mocha": "^6.2.3",
    "p5": "^0.9.0"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  }
}
